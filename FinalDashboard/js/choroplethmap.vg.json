{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#f0f0f0",
  "title": {
    "text": "State-Level Food Expenditure in Malaysia (2019)",
    "anchor": "middle",
    "dy": -5
  },
  "width": 800,
  "height": 390,
  "projection": {
    "type": "mercator",
    "center": [108.3, 4],
    "scale": 2500
  },
  "layer": [
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/master/public/data/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/abbie0711/FIT-3179/refs/heads/main/FinalDashboard/data/food_spending.csv"
            },
            "key": "State",
            "fields": ["Food Spending (%)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Food Spending (%)",
          "type": "quantitative",
          "title": "Food Spending (%)",
          "scale": {
            "domain": [9, 13, 17, 21, 25],
            "range": ["#f7f4ef", "#e6d7c3", "#d4b896", "#b38b6d", "#8b5a3c"]
          },
          "legend": {
            "title": "Food Spending (%)",
            "direction": "vertical",
            "orient": "right",
            "tickCount": 5
          }
        },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "State"},
          {"field": "Food Spending (%)", "type": "quantitative", "title": "Food Spending %"}
        ]
      }
    }
  ]
}
